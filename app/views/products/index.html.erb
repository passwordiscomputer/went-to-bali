<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= product.name %></h4>
      <p><%= link_to "Details", product_path(product), :class => "btn", remote: true%></p>
      <p id=<%="product#{product.id}"%> style="display: none;"><%= product.description %></p>
      <p><%= number_to_currency product.price %></p>
      <%= form_for @order_item,  remote: true do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, value: 1, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>
    </div>
  <% end %>
</div>
</div>
